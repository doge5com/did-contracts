{
  "name": "did-contracts",
  "version": "1.0.0",
  "description": "DID Contracts",
  "scripts": {
    "clean": "rm -rf ./abis ./artifcats ./cache ./typechain-types ./dist",
    "compile": "hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.ts",
    "compile:force": "hardhat compile --force",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,sol,json,yaml,md}'",
    "format:write": "prettier --write '**/*.{js,jsx,ts,tsx,sol,json,yaml,md}'",
    "prepare": "husky install",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:forge": "forge test",
    "test:coverage": "hardhat coverage && hardhat compile --force"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.18.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "dns-packet": "^5.4.0",
    "erc721a": "^4.2.3",
    "erc721a-upgradeable": "^4.2.2",
    "eth-ens-namehash": "^2.0.8",
    "ethers-eip712": "^0.2.0",
    "randomstring": "^1.2.3"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.2",
    "@nomiclabs/hardhat-solhint": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/hardhat-upgrades": "^1.21.0",
    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.8",
    "chai": "^4.3.6",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.1",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.19",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-tracer": "^1.1.1",
    "hardhat-watcher": "^2.5.0",
    "husky": "^8.0.1",
    "mocha": "^10.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typechain": "^8.1.0",
    "typescript": "^4.8.4"
  }
}
